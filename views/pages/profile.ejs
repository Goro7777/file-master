<%- include('../partials/header', { title: "Profile" }) %>
<div class="col-12 col-md-11 col-lg-9 col-xl-7">
    <h2 class="fw-bold mb-5 text-uppercase">
        <%= (info.userid === user.userid ? "MY " : "") %>Profile
    </h2>

    <div class="card card-body mb-4 border-success ms-3">
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0"><strong>Username</strong></p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0">
                    <strong><%= info.username %></strong>
                </p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Full Name</p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0"><%= info.firstname + " " + info.lastname %></p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Email</p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0"><%= info.email %></p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Joined on</p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0"><%= info.joinedon.toDateString() %></p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Status</p>
            </div>
            <div class="col-sm-9 d-flex justify-content-between">
                <p class="mb-0"><%= info.status %></p>
                <% if (info.userid === user.userid && !user.isadmin) { %>
                <a class="link-success pe-4" href="/upgrade">Upgrade</a>
                <% } %>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Posts</p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0"><%= info.postscount %></p>
            </div>
        </div>
    </div>
</div>
