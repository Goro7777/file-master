<%- include('../partials/header', { title: "Profile" }) %>
<div class="col-12 col-md-11 col-lg-9 col-xl-7">
    <h2 class="fw-bold mb-5 text-uppercase">My Profile</h2>

    <div class="card card-body mb-4 border-success ms-3">
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Username</p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0">
                    <strong><%= user.username %></strong>
                </p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Full name</p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0"><%= user.firstname + " " + user.lastname %></p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="text-muted mb-0">Email</p>
            </div>
            <div class="col-sm-9">
                <p class="mb-0"><%= user.email %></p>
            </div>
        </div>
    </div>
</div>
