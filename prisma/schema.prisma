generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  firstname String
  lastname  String
  password  String
  joinedAt  DateTime @default(now())
}
